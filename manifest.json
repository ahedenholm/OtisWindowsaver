{
  "name": "Otis Windowsaver",
  "short_name": "Windowsaver",
  "version": "1.1.0",
  "description": "Otis will help you save and load the positions and sizes of your browser windows.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo16px.png",
      "32": "images/logo32px.png",
      "48": "images/logo48px.png",
      "128": "images/logo128px.png"
    }
  },
  "icons": {
    "16": "images/logo16px.png",
    "32": "images/logo32px.png",
    "48": "images/logo48px.png",
    "128": "images/logo128px.png"
  },
  "manifest_version": 2
}